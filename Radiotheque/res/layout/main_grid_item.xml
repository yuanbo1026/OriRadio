<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<com.technisat.radiotheque.genre.SquareImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/tile_main_bg"
        />
	
	<LinearLayout android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    android:gravity="center"
	    android:orientation="vertical">
	    
   	    <ImageView
	        android:id="@+id/iv_main_grid_item_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_genre"
	        android:contentDescription="@null" />
	    
	    <TextView
	        android:id="@+id/tv_main_grid_item_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/mainactivity.button.genre"
	        android:textColor="@color/RadiothekWhite"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	</LinearLayout>
	   	


</FrameLayout>
